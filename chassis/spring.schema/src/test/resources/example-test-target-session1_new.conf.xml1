<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jagger="http://www.griddynamics.com/schema/jagger"
       xsi:schemaLocation="http://www.griddynamics.com/schema/jagger http://www.griddynamics.com/schema/jagger.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       >

    <jagger:session id="session" monitoring="enabled">
        <jagger:performance_profile ref="pr1"/>
        <jagger:listeners>
            <ref bean="googlePageNew"/>
            <bean class="as"/>
        </jagger:listeners>
    </jagger:session>

    <jagger:performance_profile id="pr1">
            <jagger:test>
                <jagger:task workload="loadGooglePageNew">
                    <jagger:tps value="10" tickInterval="500"/>
                    <jagger:termination samples="200" duration="30s"/>
                </jagger:task>
            </jagger:test>
     </jagger:performance_profile>

    <bean id="loadGooglePageNew" class="com.griddynamics.jagger.engine.e1.scenario.WorkloadTask" parent="externalResourcesAbstractWorkload">
        <property name="name" value="load-google-page-new"/>
        <property name="version" value="1" />
        <property name="scenarioFactory" ref="googlePageNew" />
    </bean>


    <bean id="googlePageNew"
          class="com.griddynamics.jagger.invoker.http.HttpVisitorInvokerConfiguration">
        <property name="url" value="http://google.com"/>
    </bean>

    <bean id="externalResourcesAbstractWorkload" abstract="true"
          class="com.griddynamics.jagger.engine.e1.scenario.WorkloadTask">
        <property name="collectors">
            <list>
            </list>
        </property>
        <property name="calibrator">
            <bean class="com.griddynamics.jagger.engine.e1.scenario.OneNodeCalibrator"/>
        </property>
    </bean>

