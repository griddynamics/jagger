<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:spring/persistence.conf.xml, classpath:spring/reporting.conf.xml</param-value>
    </context-param>
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>classpath:log4j.properties</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>
    <!-- Bootstrap the root application context as usual using ContextLoaderListener -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>gwt</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>com.griddynamics.jagger.webclient.JaggerWebClient MetricDataService</servlet-name>
        <servlet-class>com.griddynamics.jagger.webclient.server.MetricDataServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>gwt</servlet-name>
        <url-pattern>/com.griddynamics.jagger.webclient.JaggerWebClient/rpc/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>com.griddynamics.jagger.webclient.JaggerWebClient MetricDataService</servlet-name>
        <url-pattern>/com.griddynamics.jagger.webclient.JaggerWebClient/MetricDataService</url-pattern>
    </servlet-mapping>
</web-app>
